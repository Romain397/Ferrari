{% extends 'base.html.twig' %}
{% block title %}Gérer les articles
{% endblock %}

{% block main %}
	<h1 class="mb-4 text-center">Gérer les articles de voitures</h1>

	<div class="mb-4">
		<h3>Ajouter un nouvel post</h3>
		{{ form_start(form) }}
		{{ form_row(form.model) }}
		{{ form_row(form.title) }}
		{{ form_row(form.content) }}
		{{ form_row(form.year) }}
		{{ form_row(form.highlight) }}
		{{ form_row(form.image) }}
		{{ form_row(form.video) }}
		{{ form_row(form.category) }}
		<button type="submit" class="btn btn-danger mt-2">Publier</button>
		{{ form_end(form) }}
	</div>

	<h3>Posts existants</h3>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>ID</th>
				<th>Titre</th>
				<th>Modèle</th>
				<th>Année</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for post in posts %}
				<tr>
					<td>{{ post.id }}</td>
					<td>{{ post.title }}</td>
					<td>{{ post.model }}</td>
					<td>{{ post.year }}</td>
					<td>
						<a href="#" class="btn btn-sm btn-warning">Modifier</a>
						<a href="{{ path('delete_post', {'id': post.id}) }}" class="btn btn-sm btn-danger">Supprimer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-center">Aucun post pour le moment.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
