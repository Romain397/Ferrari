{% extends 'base.html.twig' %}

{% block title %}Sport Auto – Palmarès Ferrari
{% endblock %}

{% block main %}
	<h1>{{ 'palmarès ferrari wec'|upper }}</h1>

	<ul class="palmares">
		{% for item in palmares %}
			<li class="{% if item.major %}major{% endif %}">
				<strong>{{ item.year }}</strong>
				–
				{{ item.title|capitalize }}

				{% if item.major %}
					<span class="badge">
						{{ 'titre majeur'|upper }}
					</span>
				{% endif %}
			</li>
		{% endfor %}
	</ul>

	<p class="summary">
		Nombre total de résultats :
		{{ palmares|length }}
	</p>
{% endblock %}
