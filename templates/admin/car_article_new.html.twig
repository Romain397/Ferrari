{% extends 'base.html.twig' %}

{% block title %}Nouvel Article
{% endblock %}

{% block main %}
	<div class="row justify-content-center">
		<div class="col-md-8">
			<h1 class="mb-4">Créer un nouvel article de voiture</h1>

			{# Flash messages #}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
					</div>
				{% endfor %}
			{% endfor %}

			{# Début du formulaire #}
			{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

			<div class="mb-3">
				{{ form_row(form.model, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.content, {'attr': {'class': 'form-control', 'rows': 5}}) }}
			</div>

			<div class="mb-3 form-check">
				{{ form_row(form.highlight, {'attr': {'class': 'form-check-input'}}) }}
			</div>

			<div class="mb-3">
				{{ form_row(form.year, {'attr': {'class': 'form-control'}}) }}
			</div>

			{# Champ Image #}
			<div class="mb-3">
				{{ form_row(form.image, {'attr': {'class': 'form-control', 'placeholder': '/images/499p.jpg'}}) }}
			</div>

			{# Champ Vidéo #}
			<div class="mb-3">
				{{ form_row(form.video, {'attr': {'class': 'form-control', 'placeholder': 'https://youtu.be/...'}}) }}
			</div>

			<button type="submit" class="btn btn-danger mt-3">Créer l’article</button>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
