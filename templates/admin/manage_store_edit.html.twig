{% extends 'base.html.twig' %}

{% block title %}Modifier un produit
{% endblock %}

{% block main %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="mb-4 text-danger">✏️ Modifier le produit: <strong>{{ product.name }}</strong></h1>

				{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

					{{ form_row(form.name, {
						'label': 'Nom du produit',
						'attr': {'class': 'form-control', 'placeholder': 'Ex: T-shirt Ferrari'}
					}) }}

					{{ form_row(form.type, {
						'label': 'Type de produit',
						'attr': {'class': 'form-select'}
					}) }}

					{{ form_row(form.price, {
						'label': 'Prix (€)',
						'attr': {'class': 'form-control', 'placeholder': '49.99', 'step': '0.01', 'min': '0'}
					}) }}

					{{ form_row(form.description, {
						'label': 'Description',
						'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Description du produit...'}
					}) }}

					{{ form_row(form.image, {
						'label': 'Image du produit (URL)',
						'attr': {'class': 'form-control', 'placeholder': 'https://example.com/image.jpg'}
					}) }}

					<div class="d-flex gap-2 mt-4">
						<button type="submit" class="btn btn-danger w-100">Mettre à jour</button>
						<a href="{{ path('manage_store') }}" class="btn btn-secondary w-100">Annuler</a>
					</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
