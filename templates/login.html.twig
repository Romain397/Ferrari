{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block main %}
	<div class="row justify-content-center">
		<div class="col-md-4">
			<h2 class="text-center text-danger mb-4">Connexion</h2>
			{{ form_start(form) }}
			{{ form_row(form.email, {'attr': {'class': 'form-control mb-3'}}) }}
			{{ form_row(form.password, {'attr': {'class': 'form-control mb-3'}}) }}
			<button type="submit" class="btn btn-danger w-100">Se connecter</button>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
